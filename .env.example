# AirLabs API
# Get your free API key at: https://airlabs.co/signup
AIRLABS_API_KEY=your_api_key_here

# OpenSky Network (optional - higher rate limits with free registration)
# Register at: https://opensky-network.org/
OPENSKY_USERNAME=
OPENSKY_PASSWORD=

# Default Airport (IATA code)
DEFAULT_AIRPORT=SFO

# Refresh Intervals (seconds)
SCHEDULES_REFRESH_INTERVAL=300       # 5 minutes (to stay under API limits)
AIRCRAFT_REFRESH_INTERVAL=10         # 10 seconds

# Map Settings
MAP_VIEW_MODE=global                 # global or regional
REGIONAL_MAP_RADIUS=300              # kilometers

# Performance
TARGET_FPS=60
ENABLE_CRT_EFFECTS=true
ENABLE_ANIMATIONS=true

# Cache TTL (seconds)
CACHE_TTL_SCHEDULES=300              # 5 minutes
CACHE_TTL_STATIC=86400               # 24 hours (for airports, airlines, etc.)
